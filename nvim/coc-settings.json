{
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"args": ["-header-insertion=never"],
			"rootPatterns": [".clangd", "compile_flags.txt", "compile_commands.json", ".git"],
			"filetypes": ["c", "cc", "cxx", "cpp", "c++", "objc", "objcpp"]
		},
		"vls": {
			"command": "vls",
			"args": [],
			"filetypes": ["vlang"]
		}
	},
	"rust-analyzer.diagnostics.disabled": ["inactive-code"],
	"rust-analyzer.cargo.allFeatures": true,
	"rust-analyzer.updates.channel": "stable",
	"rust-analyzer.assist.importPrefix": "plain",
	"rust-analyzer.updates.checkOnStartup": false
}
