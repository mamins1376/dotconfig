{
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		},
		"clangd": {
			"command": "clangd",
			"args": ["-header-insertion=never"],
			"rootPatterns": [".clangd", "compile_flags.txt", "compile_commands.json", ".git"],
			"filetypes": ["c", "cc", "cxx", "cpp", "c++", "objc", "objcpp"]
		},
		"vls": {
			"command": "vls",
			"args": [],
			"filetypes": ["vlang"]
		},
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"]
		}
	},
	"rust-analyzer.diagnostics.disabled": ["inactive-code", "unresolved-proc-macro"],
	"rust-analyzer.server.path": "rust-analyzer",
	"python.venvPath": ".venv"
}
