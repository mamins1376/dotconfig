# -*- coding: utf-8 -*-
# vim: fenc=utf-8 ts=4 noet sw=4 sts=4 ft=sh

# TODO: remove all unnecessary export statements

export LANGUAGE=en_US:en:C
export LC_TIME=$LANG

export VISUAL=nvim
export EDITOR=nvim\ -p
export PYTHONDONTWRITEBYTECODE=1
export LESS=-SR

export VDPAU_DRIVER=radeonsi
export WINEDLLOVERRIDES=mshtml=d
export PULSE_SERVER=tcp:localhost

export DATA_ROOT=/data/amin
export XDG_CONFIG_HOME=$DATA_ROOT/config
export XDG_CACHE_HOME=$DATA_ROOT/cache
export XDG_LOCAL_HOME=$DATA_ROOT/local
export XDG_DATA_HOME=$XDG_LOCAL_HOME/share

export NVM_DIR=$XDG_DATA_HOME/nvm
export PYTHONUSERBASE=$XDG_LOCAL_HOME
export WINEPREFIX=$XDG_DATA_HOME/wine
export ANDROID_SDK_ROOT=$XDG_DATA_HOME/android
export ANDROID_HOME=$ANDROID_SDK_ROOT
export DENO_DIR=$XDG_DATA_HOME/deno
export DENO_INSTALL_ROOT=$DENO_DIR
export CARGO_HOME=$XDG_CACHE_HOME/cargo
export RUSTUP_HOME=$XDG_DATA_HOME/rustup

export GOOGLE_API_KEY=no
export GOOGLE_DEFAULT_CLIENT_ID=no
export GOOGLE_DEFAULT_CLIENT_SECRET=no

for item in $XDG_CONFIG_HOME/bash $XDG_LOCAL_HOME $CARGO_HOME; do
	PATH=$item/bin:$PATH
done

export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

[ -f $XDG_CONFIG_HOME/env.local ] && . $XDG_CONFIG_HOME/env.local

if [ -z "$DBUS_SESSION_BUS_PID" ]; then
	eval $(dbus-launch)
	export DBUS_SESSION_BUS_ADDRESS
	export DBUS_SESSION_BUS_PID
	export DBUS_SESSION_BUS_WINDOWID
fi

if [ -z "$SSH_AUTH_SOCK" ]; then
    eval $(gnome-keyring-daemon --start --components=pkcs11,secrets,ssh 2> /dev/null)
    export SSH_AUTH_SOCK
fi

[ -f $NVM_DIR/nvm.sh ] && . $NVM_DIR/nvm.sh
