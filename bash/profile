# -*- coding: utf-8 -*-
# vim: fenc=utf-8 ts=4 noet sw=4 sts=4 ft=sh

[ $SESSION ] && [ ! $LANGUAGE ] || return 0

export LANGUAGE=en_US:en:C
export LC_TIME=$LANG

export VISUAL=nvim
export EDITOR=nvim\ -p
export PYTHONDONTWRITEBYTECODE=1
export LESS=-SR
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
export LIBVIRT_DEFAULT_URI=qemu:///system

XDG_CONFIG_HOME=$HOME/.config
XDG_CACHE_HOME=$HOME/.cache
XDG_LOCAL_HOME=$HOME/.local
XDG_DATA_HOME=$XDG_LOCAL_HOME/share

export NVM_DIR=$XDG_DATA_HOME/nvm
export PYTHONUSERBASE=$XDG_LOCAL_HOME
export CARGO_HOME=$XDG_CACHE_HOME/cargo
export RUSTUP_HOME=$XDG_DATA_HOME/rustup

export GOOGLE_API_KEY=no
export GOOGLE_DEFAULT_CLIENT_ID=no
export GOOGLE_DEFAULT_CLIENT_SECRET=no

export ANDROID_HOME=$XDG_DATA_HOME/android/sdk
if [ -d $ANDROID_HOME ]
then for dir in tools{,/bin} platform-tools emulator
do PATH=$ANDROID_HOME/$dir:$PATH
done
fi

for item in $XDG_CONFIG_HOME/bash $XDG_LOCAL_HOME $CARGO_HOME
do PATH=$item/bin:$PATH
done

envfile=$XDG_CONFIG_HOME/$SESSION/env
[ -f $envfile ] && . $envfile
unset envfile

if [ -z "$SSH_AUTH_SOCK" ]
then
    eval $(gnome-keyring-daemon --start --components=pkcs11,secrets,ssh 2> /dev/null)
    export SSH_AUTH_SOCK
fi
