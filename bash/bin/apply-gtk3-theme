#!/bin/bash

[ "${WAYLAND_DISPLAY:-x}" ] || exit 0

load-gsettings() {
	gsettings set org.gnome.desktop.interface ${1}-theme \
		"$(grep gtk-${2}-name $config | cut -d= -f2)"
}

config=$XDG_CONFIG_HOME/gtk-3.0/settings.ini
[ -f $config ] || exit 1

load-gsettings gtk theme
load-gsettings icon icon-theme
load-gsettings cursor cursor-theme
load-gsettings font font
